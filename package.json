{
    "name": "reactnativemodules",
    "description": "Different modules for react native",
    "main": "index.js",
    "repository": "https://github.com/thestrawhats/reactnativemodules",
    "author": "Axel",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "android": "react-native run-android",
        "ios": "react-native run-ios",
        "ios:11": "react-native run-ios --terminal iTerm --simulator \"iPhone 6\"",
        "start": "react-native start --reset-cache",
        "test": "jest",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "changelog": "conventional-changelog -n ./changelog.config.js -p angular -i CHANGELOG.md -s",
        "commit": "./scripts/commit.sh",
        "release": "node scripts/release.js"
    },
    "dependencies": {
        "react": "17.0.2",
        "react-native": "0.64.2",
        "react-native-gesture-handler": "^1.10.3",
        "react-native-reanimated": "^2.2.0",
        "react-native-unimodules": "^0.14.3"
    },
    "devDependencies": {
        "@babel/core": "^7.14.6",
        "@babel/runtime": "^7.14.6",
        "@react-native-community/eslint-config": "^3.0.0",
        "@testing-library/react-native": "^7.2.0",
        "@types/jest": "^26.0.23",
        "@types/react-native": "^0.64.10",
        "@types/react-test-renderer": "^17.0.1",
        "babel-jest": "^27.0.6",
        "eslint": "^7.29.0",
        "jest": "^27.0.6",
        "jest-expo": "^42.0.0",
        "metro-react-native-babel-preset": "^0.66.0",
        "react-test-renderer": "17.0.2",
        "regenerator-runtime": "^0.13.7",
        "typescript": "^4.3.5",
        "chalk": "^4.1.1",
        "conventional-changelog-cli": "^2.1.1",
        "conventional-changelog-conventionalcommits": "^4.6.0"
    },
    "resolutions": {
        "@types/react": "^17",
        "react-native/@jest/create-cache-key-function": "^27.0.6"
    },
    "jest": {
        "preset": "jest-expo",
        "setupFiles": [
            "./jest-setup.js"
        ],
        "transformIgnorePatterns": [
            "node_modules/(?!(jest-)?@react-native|react-native|react-clone-referenced-element|@react-native-community|expo(nent)?|@expo(nent)?/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|@sentry/.*)"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
